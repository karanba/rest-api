{
	"root": true,
	"env": {
		"browser": false,
		"es2021": true
	},
	"extends": ["standard-with-typescript", "plugin:editorconfig/all", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"no-tabs": "off",
		"prettier/prettier": ["error"],
		"@typescript-eslint/strict-boolean-expressions": "off",
		"import/first": "off",
		"@typescript-eslint/no-var-requires": "off"
	},
	"plugins": ["editorconfig", "prettier"]
}
